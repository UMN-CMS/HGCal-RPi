#!/bin/bash
# copy the directories over to all of the pis

source etc/config

for RDOUT_ALIAS in "${RDOUT_ALIASES[@]}"
do
    echo "$RDOUT_ALIAS"
    rsync -az --delete rdout/ $RDOUT_ALIAS:$PI_RDOUTDIR
done

for SYNC_ALIAS in "${SYNC_ALIASES[@]}"
do
    echo "$SYNC_ALIAS"
    rsync -az --delete sync/ $SYNC_ALIAS:$PI_SYNCDIR
done
