#!/bin/bash

source etc/config

./stop_pi_exes

# power cycle
for rdout_pi_alias in "${rdout_pi_aliases[@]}"
do
    echo "power cycling $rdout_pi_alias"
    # ssh $rdout_pi_alias "cd $pi_rdoutdir; sudo ./bin/pwr_cycle_v1" &
    ssh $rdout_pi_alias "cd $pi_rdoutdir; sudo ./bin/pwr_cycle_v2" &
done
wait
