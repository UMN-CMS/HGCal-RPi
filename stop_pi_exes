#!/bin/bash
# stops the executables on the raspberry pis

source etc/config

# stop any old executables
for sync_pi_alias in "${sync_pi_aliases[@]}"
do
    echo "stopping exes on $sync_pi_alias"
    ssh $sync_pi_alias "sudo killall $syncexe" &
done

for rdout_pi_alias in "${rdout_pi_aliases[@]}"
do
    echo "stopping exes on $rdout_pi_alias:"
    ssh $rdout_pi_alias "sudo killall $rdoutexe" &
done
wait
